{
  "name": "ecwid",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://nikitosss.github.io/",
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "start": "serve -s build",
    "type-check": "tsc",
    "lint:staged": "git add . && lint-staged && npm run type-check",
    "lint:es": "eslint --ignore-path .gitignore . --ext .ts,.tsx --max-warnings 0",
    "lint:style": "stylelint --ignore-path .gitignore **/*.scss --max-warnings 0",
    "lint": "run-p lint:es lint:style",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "cross-env PUBLIC_URL='/ecwid/' npm run build",
    "deploy": "gh-pages -d build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "npm run type-check"
    }
  },
  "engineStrict": true,
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "ie 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "ie 11"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@bem-react/classname": "1.5.8",
    "lodash.debounce": "4.0.8",
    "react": "16.13.1",
    "react-app-polyfill": "1.0.6",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.8.0",
    "@testing-library/react": "10.0.4",
    "@testing-library/user-event": "10.4.0",
    "@types/jest": "25.2.3",
    "@types/lodash.debounce": "4.0.6",
    "@types/node": "14.0.5",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@typescript-eslint/eslint-plugin": "canary",
    "@typescript-eslint/parser": "canary",
    "cross-env": "7.0.2",
    "eslint-config-airbnb-typescript": "7.2.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-flowtype": "5.1.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.3",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-tsc": "1.2.0",
    "eslint-plugin-unicorn": "20.0.0",
    "gh-pages": "2.2.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.6",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "react-scripts": "3.4.1",
    "serve": "11.3.1",
    "stylelint": "13.5.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.0.0",
    "stylelint-scss": "3.17.2",
    "typescript": "3.9.3"
  }
}
